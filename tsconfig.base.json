{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "paths": {
      "@coong/base": ["../../base/src"],
      "@coong/base/*": ["../../base/src/*"],
      "@coong/keyring": ["../../keyring/src"],
      "@coong/keyring/*": ["../../keyring/src/*"],
      "@coong/util": ["../../util/src"],
      "@coong/util/*": ["../../util/src/*"]
    }
  }
}
